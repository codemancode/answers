<!DOCTYPE html>
<html>
<head>
  <title>Answers</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <div class="header">

  </div>
  <div class="row-fluid">
    <div class="span9">
      <!-- Main Area -->
      <div class="search-area">
        <%= yield(:search) %>
      </div>
      <div class="questions">
        <%= yield(:questions) %>
      </div>
      <div class="pagination">
        <%= yield(:pagination) %>
      </div>
    </div>
    <div class="span3">
      <!-- Sidebar Content -->
      <%= yield(:sidebar) %>
    </div>
  </div>
</div>

</body>
</html>
